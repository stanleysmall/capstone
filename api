# tags are used for organizing operations
tags:
- name: admins
  description: Operations available to administrators
- name: teachers
  description: Operations available to teachers

paths:
  /courses:
    get:
      tags:
      - teachers
      - admins
      summary: retreives a list of all courses
      operationId: searchInventory
      description: |
        By passing in the appropriate options, you can search for
        available inventory in the system
      produces:
      - application/json
      parameters:
      - in: query
        name: teacher_id
        description: the ID for a teacher
        required: true
        type: int32
      responses:
        200:
          description: search results matching criteria
          schema:
            type: array
            items:
              $ref: '#/definitions/Course'
        400:
          description: bad input parameter
    post:
      tags:
      - admins
      summary: adds an inventory item
      operationId: addInventory
      description: Adds an item to the system
      consumes:
      - application/json
      produces:
      - application/json
      parameters:
      - in: body
        name: inventoryItem
        description: Inventory item to add
        schema:
          $ref: '#/definitions/InventoryItem'
      responses:
        201:
          description: item created
        400:
          description: invalid input, object invalid
        409:
          description: an existing item already exists
definitions:
  Course:
    type: object
    required:
    - id
    - name
    properties:
      id:
        type: string
        format: uuid
        example: 1
      name:
        type: string
        example: COS 397
  Template:
    type: object
    required:
    - id
    - questions
    properties:
      id:
        type: string
        format: uuid
        example: 1
      questions:
        type: array
        example: { "question 1": null, "question 2": null }
